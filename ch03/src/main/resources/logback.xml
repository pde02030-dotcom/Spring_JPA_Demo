<configuration>
    <!-- <property name="LOG_PATH" value="${LOG_PATH:-logs}"/> -->

    <appender name="CONSOLE"
      class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %logger - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
